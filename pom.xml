        <logstash-logback-encoder.version>7.4</logstash-logback-encoder.version>
        <stripe.version>31.0.0</stripe.version>
        <spring-cloud-gcp.version>7.4.1</spring-cloud-gcp.version>
        <lombok.version>1.18.42</lombok.version>
